{
    "tags": {
        "Name": "StopAndRestart3RandomTaggedInstances"
    },
    "description": "Stop and restart 3 random tagged instances",
    "actions": {
        "StopInstances": {
            "actionId": "aws:ec2:stop-instances",
            "description": "stop the instances",
            "parameters": {
                "startInstancesAfterDuration": "PT2M"
            },
            "targets": {
                "Instances": "myInstance"
            }
        }
    },
    "targets": {
        "myInstance": {
            "resourceTags": {
                "Experiment": "ChaosReady"
            },
            "resourceType": "aws:ec2:instance",
            "selectionMode": "COUNT(3)"
        }
    },
    "roleArn": "arn:aws:iam::01234567890:role/MyFISExperimentRole"
}